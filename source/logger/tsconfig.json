{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "es5",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@typed/*": [
        "../*"
      ]
    }
  },
  "exclude": [
    "./**/*.test.ts",
    "./**/*.browser-test.ts",
    "./cjs/**",
    "./esm/**",
  ]
}
