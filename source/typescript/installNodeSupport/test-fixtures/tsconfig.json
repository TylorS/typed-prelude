{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "foo/*": ["./foo/*"],
      "bar/*": ["./bar/*"],
    },
    "lib": [
      "es2016"
    ],
    "module": "commonjs"
  }
}
