{
  "name": "@typed/prelude",
  "description": "The TypeScript Standard Library",
  "repository": "https://github.com/TylorS/typed-prelude",
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna exec rimraf cjs esm node_modules",
    "clean:ts": "tsc --build packages/tsconfig.cjs.json --clean && tsc --build packages/tsconfig.json --clean",
    "update:package": "ts-node tools/update-package-json",
    "update:tsconfig": "ts-node tools/update-tsconfig-json",
    "update": "npm run update:package && npm run update:tsconfig && lerna bootstrap",
    "postinstall": "lerna bootstrap && npm run update",
    "build:cjs": "tsc --build packages/tsconfig.cjs.json",
    "build:esm": "tsc --build packages/tsconfig.json",
    "build": "npm run update && npm run rebuild",
    "rebuild": "npm run build:cjs && npm run build:esm",
    "watch": "npm run build:cjs -- --watch & npm run build:esm -- --watch",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "typed-test && npm run lint",
    "release": "lerna bootstrap && npm run rebuild && npm run test && lerna publish --verify-access",
    "release:beta": "npm run release -- --canary --preid beta --dist-tag beta",
    "release:alpha": "npm run release -- --canary --preid alpha --dist-tag alpha"
  },
  "devDependencies": {
    "@typed/test": "9.3.0",
    "@types/node": "12.0.10",
    "fuse-box": "^3.7.1",
    "fuse-box-typechecker": "^2.12.0",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "terser": "^4.0.1",
    "ts-node": "8.3.0",
    "tslib": "^1.10.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-circular-imports": "0.7.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.2"
  },
  "peerDependencies": {
    "tslib": "^1.10.0"
  }
}
