{
  "name": "@typed/prelude",
  "description": "The TypeScript Standard Library",
  "repository": "https://github.com/TylorS/typed-prelude",
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna exec rimraf cjs esm node_modules",
    "clean:ts": "tsc --build packages/tsconfig.cjs.json --clean && tsc --build packages/tsconfig.json --clean",
    "update:package": "ts-node tools/update-package-json",
    "update:tsconfig": "ts-node tools/update-tsconfig-json",
    "update": "npm run update:package && npm run update:tsconfig",
    "postinstall": "lerna link && npm run update",
    "build:cjs": "tsc --build packages/tsconfig.cjs.json",
    "build:esm": "tsc --build packages/tsconfig.json",
    "build": "npm run clean && npm run update && lerna link && npm run build:cjs && npm run build:esm",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "typed-test && npm run lint",
    "release": "npm run test && lerna publish --verify-access",
    "release:beta": "npm run test && lerna publish --verify-access --canary --preid beta --dist-tag beta",
    "release:alpha": "npm run test && lerna publish --verify-access --canary --preid alpha --dist-tag alpha"
  },
  "devDependencies": {
    "@typed/test": "9.3.0",
    "@types/node": "12.0.0",
    "lerna": "3.14.1",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "ts-node": "8.1.0",
    "tslib": "^1.9.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-circular-imports": "0.6.2",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.5"
  },
  "peerDependencies": {
    "tslib": "^1.9.3"
  }
}
