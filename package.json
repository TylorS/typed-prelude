{
  "name": "@typed/prelude",
  "description": "The TypeScript Standard Library",
  "repository": "https://github.com/TylorS/typed-prelude",
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna exec rimraf cjs esm node_modules && tsc --build packages/tsconfig.cjs.json --clean && tsc --build packages/tsconfig.json --clean",
    "update:package": "ts-node tools/update-package-json",
    "update:tsconfig": "ts-node tools/update-tsconfig-json",
    "update": "npm run update:package && npm run update:tsconfig",
    "postinstall": "lerna link && npm run update",
    "build": "npm run clean && npm run update && lerna link && tsc --build packages/tsconfig.cjs.json && tsc --build packages/tsconfig.json",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "typed-test && npm run lint"
  },
  "devDependencies": {
    "@typed/test": "9.2.0",
    "@types/node": "12.0.0",
    "lerna": "3.13.4",
    "lint-staged": "8.1.6",
    "prettier": "1.17.0",
    "ts-node": "8.1.0",
    "tslib": "^1.9.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-circular-imports": "0.6.2",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.5"
  },
  "peerDependencies": {
    "tslib": "^1.9.3"
  }
}
